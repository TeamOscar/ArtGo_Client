<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.seuic.sell.activity.SellMainActivity">

    <TextView android:text="市集" android:layout_width="fill_parent"
        android:gravity="center"
        android:textSize="24sp"
        android:background="#ECE7ED"
        android:layout_height="40dp" />
    <ListView
        android:id="@+id/lv_sellitem"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#ECE7ED"
            android:text="社区"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#ECE7ED"
            android:text="市集"/>
        </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@mipmap/home"/>
        <ImageView
            android:id="@+id/iv_liaotian"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/iv_home"
            android:layout_marginRight="30dp"
            android:scaleType="centerInside"
            android:src="@mipmap/liaotian"/>
        <ImageView
            android:id="@+id/iv_set"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/iv_home"
            android:layout_marginLeft="30dp"
            android:scaleType="centerInside"
            android:src="@mipmap/set"/>
    </RelativeLayout>

</LinearLayout>
