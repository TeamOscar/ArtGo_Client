       android:layout_marginTop="80dp"
       android:text="注册成功"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:gravity="center_horizontal"
        android:src="@mipmap/register"/>

</LinearLayout>
