<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_sellitem"
        android:layout_width="fill_parent"
        android:layout_height="240dp"
        android:scaleType="centerInside"
        android:src="@mipmap/listitem1"/>

    <ImageView
        android:id="@+id/iv_touxiang"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        android:src="@mipmap/touxiang"/>
    <TextView
        android:id="@+id/tv_sign"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/iv_sellitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="#群像，自然"/>
    <ImageView
        android:id="@+id/iv_weizhi"
        android:layout_below="@+id/tv_sign"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerInside"
        android:src="@mipmap/weizhi"/>
    <TextView
        android:id="@+id/tv_address"
        android:layout_toRightOf="@+id/iv_weizhi"
        android:layout_alignBottom="@+id/iv_weizhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="北京"/>
    <ImageView
        android:id="@+id/iv_time"
        android:layout_below="@+id/tv_sign"
        android:layout_toRightOf="@+id/tv_address"
        android:layout_alignBottom="@+id/tv_address"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerInside"
        android:src="@mipmap/time"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_toRightOf="@+id/iv_time"
        android:layout_alignBottom="@+id/iv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="2016、5"/>

    <ImageView
        android:id="@+id/iv_liaotian"
        android:layout_below="@+id/iv_sellitem"
        android:layout_toRightOf="@+id/tv_time"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        android:src="@mipmap/liaotian"/>
    <Button
        android:id="@+id/bt_price"
        android:layout_marginLeft="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_normal_style"
        android:layout_toRightOf="@+id/iv_liaotian"
        android:layout_alignBottom="@+id/tv_time"
        android:textSize="18sp"
        android:text="29.9"
        android:textColor="@color/darkgrey"/>
</RelativeLayout>