<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape >
            <stroke
                android:width="0.5dp"
                android:color="#ffedcabd"
                />
            <gradient 
                android:startColor="#ECE7ED"
                android:endColor="#ECE7ED"
                />
            <corners
                android:radius="9dp"
                android:topLeftRadius="6dp"
                android:topRightRadius="6dp"
                android:bottomLeftRadius="6dp"
                android:bottomRightRadius="6dp"/><!-- 设置圆角半径 -->
            <padding 
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"
                android:bottom="2dp"
                />
        </shape>
    </item>
    <item>
        <shape >
            <stroke
                android:width="0.5dp"
                android:color="#ffedccbc"
                />
            <gradient 
                android:startColor="#ECE7ED"
                android:endColor="#ECE7ED"
                />
            <corners
                android:radius="9dp"
                android:topLeftRadius="6dp"
                android:topRightRadius="6dp"
                android:bottomLeftRadius="6dp"
                android:bottomRightRadius="6dp"/><!-- 设置圆角半径 -->
            <padding 
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"
                android:bottom="2dp"
                />
        </shape>
    </item>
</selector>
